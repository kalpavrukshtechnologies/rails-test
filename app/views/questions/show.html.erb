<h1>Question</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p><%= @question.title %></p>
    <p>- <%= @question.user.name %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table border="2">
      <thead>
        <tr>
          <th>Answer</th>
          <th>By</th>
        </tr>
      </thead>
    
      <tbody>
        <% @answers.each do |answer| %>
          <tr>
            <td><%= answer.body %></td>
            <td><%= answer.user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
